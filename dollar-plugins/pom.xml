<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>dollar</artifactId>
        <groupId>me.neilellis</groupId>
        <version>0-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>


    <artifactId>dollar-plugins</artifactId>
    <packaging>pom</packaging>
    <modules>
        <module>dollar-redis-plugin</module>
        <module>dollar-metrics-plugin</module>
        <module>dollar-camel-plugin</module>
        <module>dollar-socketio-plugin</module>
        <module>dollar-mapdb-plugin</module>
        <module>dollar-http-plugin</module>
        <module>dollar-maven-resolver-plugin</module>
        <module>dollar-github-resolver-plugin</module>
        <module>dollar-class-resolver-plugin</module>
        <module>dollar-std-resources-plugin</module>
        <module>dollar-orientdb-learner-plugin</module>
        <module>dollar-hazelcast-learner-plugin</module>
        <module>dollar-simple-learner-plugin</module>
        <module>dollar-simple-execution-plugin</module>
    </modules>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <configuration>
                    <artifactSet>
                        <!--<excludes>-->
                        <!--<exclude>me.neilellis.dollar:*</exclude>-->
                        <!--<exclude>me.neilellis:*</exclude>-->
                        <!--</excludes>-->
                    </artifactSet>
                    <shadedArtifactAttached>true</shadedArtifactAttached>
                    <shadedClassifierName>plugin</shadedClassifierName>
                    <!--Change to true if/when http://jira.codehaus.org/browse/MSHADE-174 is fixed -->
                    <minimizeJar>false</minimizeJar>
                    <filters>
                        <filter>
                            <!--
                                Exclude files that sign a jar
                                (one or multiple of the dependencies).
                                One may not repack a signed jar without
                                this, or you will get a
                                SecurityException at program start.
                            -->
                            <artifact>*:*</artifact>
                            <excludes>
                                <exclude>META-INF/*.SF</exclude>
                                <exclude>META-INF/*.RSA</exclude>
                                <exclude>META-INF/*.INF</exclude>
                                <exclude>META-INF/license</exclude>
                            </excludes>
                        </filter>
                    </filters>
                </configuration>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>